@using CommercialAutomation.Models.Classes
@model List<SalesTransaction>
@{
    ViewBag.Title = "SaleDetail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h2>Satış Detayları</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>Satış Id</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SalesTransactionId</td>
            <td>@item.Product.ProductName</td>
            <td>@item.Current.CurrentName @item.Current.CurrentSurname</td>
            <td>@item.Employee.EmployeeName @item.Employee.EmployeeSurname</td>
            <td>@item.Price</td>
            <td>@item.Count</td>
            <td>@item.TotalPrice</td>
            <td>@item.Date.ToShortDateString()</td>
            
        </tr>
    }
</table>
<button class="btn btn-default" style="background-color: lightblue;width: 120px; margin-left: 20px;">Yazdır</button>
