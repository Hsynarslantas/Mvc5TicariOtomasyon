@model CommercialAutomation.Models.Classes.Employee
@{
    ViewBag.Title = "GetEmployee";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Çalışan Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group" style="margin-left: 30px">
        @Html.HiddenFor(x => x.EmployeeId)
        @Html.Label("DepartmentName", "Çalışan Adı")
        @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
        <br />
        @Html.Label("DepartmentName", "Çalışan Soyadı")
        @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control" })
        <br />
        @Html.Label("DepartmentName", "Çalışan Görseli")
        <input type="file" name="EmployeeImageUrl" />
        <br />
        @Html.Label("Department", "Departman Adı")
        @Html.DropDownListFor(x => x.Department, (List<SelectListItem>)ViewBag.dp, new { @class = "form-control" })
        <br />
    </div>
    <button class="btn btn-info"style="margin-left:20px;"> Çalışanı Güncelle</button>
}

