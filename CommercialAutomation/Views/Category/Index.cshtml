@using CommercialAutomation.Models.Classes
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/Web/dist/css/styles.css" rel="stylesheet" />
<table class="table table-bordered" style="margin-top:20px;margin-left:20px;">
    <tr>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}),new PagedListRenderOptions
{
    LiElementClasses=new List<string>
    {"page-link"}
})
<a href="/Category/CreateCategory/" class="btn btn-primary" style="width: 120px;">Kategori Ekle</a>
