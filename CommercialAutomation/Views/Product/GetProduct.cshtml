@model  CommercialAutomation.Models.Classes.Product
@{
    ViewBag.Title = "GetProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2> Ürün Güncelleme Sayfası</h2>
<br />
<form method="post" class="form-group" style="margin-left:30px">
    @Html.HiddenFor(x=>x.ProductId)
    <br />
    @Html.Label("ProductName", "Ürün Adı")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br /><br />
    @Html.Label("ProductStock", "Ürün Stoğu")
    @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
    <br /><br />
    @Html.Label("ProductStock", "Ürün Markası")
    @Html.TextBoxFor(x => x.ProductBrand, new { @class = "form-control" })
    <br /><br />
    @Html.Label("ProductPurchasePrice", "Ürün Alış Fiyatı")
    @Html.TextBoxFor(x => x.ProductPurchasePrice, new { @class = "form-control" })
    <br /><br />
    @Html.Label("ProductStock", "Ürün Satış Fiyatı")
    @Html.TextBoxFor(x => x.ProductPurchasePrice, new { @class = "form-control" })
    <br /><br />
    @Html.Label("ProductStock", "Ürün Durumu")
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br /><br />
    @Html.Label("ImageUrl", "Ürün Görseli")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br /><br />
    @Html.Label("Category", "Kategorisi")
    @Html.DropDownListFor(x => x.Category, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-info"> Ürünü Güncelle</button>
</form>


