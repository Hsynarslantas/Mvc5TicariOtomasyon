@using CommercialAutomation.Models.Classes
@model List<InvoiceItem>
@{
    ViewBag.Title = "InvoiceDetail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Fatura Kalemleri Sayfası</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Açıklama</th>
        <th>Birim Fiyat</th>
        <th>Toplam Fiyat</th>
        <th>Sattığı Ürünler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InvoiceItemId</td>
            <td>@item.Description</td>
            <td>@item.UnitPrice</td>
            <td>@item.TotalPrice</td>
        </tr>
    }

</table>
<a href="/Invoice/CreateInvoiceItem/" class="btn btn-default" style="background-color:darkgoldenrod;margin-left:20px;">Yeni Kalem Girişi</a>


