@model CommercialAutomation.Models.Classes.Department
@{
    ViewBag.Title = "GetDepartmant";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("UpdateDepartment", "Department", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("DepartmentName", "Departman Adı")
        @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
        @Html.HiddenFor(x => x.DepartmentId)
    </div>
    <button class="btn btn-info"style="margin-left:20px;"> Departmanı Güncelle</button>
}

